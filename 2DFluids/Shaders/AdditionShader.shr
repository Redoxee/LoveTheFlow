#ifdef VERTEX

vec4 position( mat4 transform_projection, vec4 vertex_position )
{
    return transform_projection * vertex_position;
}
#endif
 
#ifdef PIXEL

uniform sampler2D additionalField;

vec4 effect( vec4 color, Image baseField, vec2 texture_coords, vec2 screen_coords)
{

    vec2 uv = texture_coords.xy;
    

    return  texture2D(baseField,uv) + texture2D(additionalField,uv);
}
#endif